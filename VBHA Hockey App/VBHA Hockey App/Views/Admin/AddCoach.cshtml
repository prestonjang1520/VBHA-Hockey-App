@model VBHA_Hockey_App.Models.viewmodels.NewCoachViewModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="teams-wrapper">
    <h2>Add Coach</h2>
    @using (Html.BeginForm())
    {
        <label>First Name</label>
        @Html.TextBoxFor(x=>x.FirstName)
        @Html.ValidationMessageFor(x=>x.FirstName, "", new { @class = "error" })

        <label>Last Name</label>
        @Html.TextBoxFor(x => x.LastName)
        @Html.ValidationMessageFor(x => x.LastName, "", new { @class = "error" })

        <label>Email</label>
        @Html.TextBoxFor(x => x.Email)
        @Html.ValidationMessageFor(x => x.Email, "", new { @class = "error" })

        <label>Password</label>
        @Html.PasswordFor(x=>x.Password)
        @Html.ValidationMessageFor(x => x.Password, "", new { @class = "error" })

        <label>Confirm Password</label>
        @Html.PasswordFor(x=>x.ConfirmPassword)
        @Html.ValidationMessageFor(x => x.ConfirmPassword, "", new { @class = "error" })

        <label>Coach of Team</label>
        @Html.DropDownListFor(model => model.SelectedTeam, Model.Teams, "", new { @class = "form-control" })

        <input type="submit" value="Create" class="create-button" />
    }
</div>



